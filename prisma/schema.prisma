generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Documents {
  id        String  @id @default(cuid())
  subject   String
  purpose   String
  logs      Log[]
  flow      Flow
  signatory String?
  files     File[]
}

model File {
  id          String    @id @default(cuid())
  name        String
  size        BigInt
  documentsId String
  documents   Documents @relation(fields: [documentsId], references: [id], onDelete: Cascade)
}

model Log {
  id          String    @id @default(cuid())
  logDate     DateTime
  office      Office
  name        String
  role        Role
  documents   Documents @relation(fields: [documentsId], references: [id], onDelete: Cascade)
  documentsId String
}

enum Role {
  SENDER
  RECIPIENT
}

enum Purpose {
  Information
  Signature
  Others
}

enum Office {
  PPDO
  PICTU
  PGO
  PMDP
  Investments
  Others
}

enum Flow {
  INCOMING
  OUTGOING
}

model User {
  id              String    @id
  sessions        Session[]
  username        String    @unique
  hashed_password String
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}
